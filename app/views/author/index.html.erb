<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h4>Upload csv file with authors</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <%= form_with(url: { action: :upload }, multipart: true) do %>
        <div class="input-group">      
          <div class="custom-file">
            <input type="file" name="csvfile" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
          </div>
          <div class="input-group-append">
            <input type="submit" class="btn btn-primary" value="Upload">
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <br/>
  
  <div class="row">
    <div class="col-12">
      <a class="btn btn-success btn-sm float-left" href="<%= main_index_path %>" role="button">Back to menu</a>
      <a class="btn btn-primary btn-sm float-right" href="<%= publications_index_path %>" role="button">Go to publications</a>
    </div>
  </div>

  <br/>
  
  <div class="row">
    <div class="col-12">
      <table class="table table-striped table-bordered table-sm">
        <tr>
          <th>Email</th>
          <th>First name</th>
          <th>Last name</th>
        </tr>
        <% @authors.each do |item| %>
          <tr>
            <td><%= item.email %></td>
            <td><%= item.first_name %></td>
            <td><%= item.last_name %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <br/>

  <div class="row">
    <div class="col-12">
      <a class="btn btn-success btn-sm float-left" href="<%= main_index_path %>" role="button">Back to menu</a>
      <a class="btn btn-primary btn-sm float-right" href="<%= publications_index_path %>" role="button">Go to publications</a>
    </div>
  </div>
</div>